@model ProductListViewModel

<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("CategoriesMenu")
        @await Component.InvokeAsync("ProductFilterMenu")
        <div products="" number="3"> </div>
    </div>
    <div class="col-md-9">
        <div class="row my-3">
            @foreach (var prd in Model.Products)
            {
                <partial name="_ProductCart" model="@prd" />
            }
        </div>
        <div class="text-center">
            <div page-model="@Model?.Pagination" page-action="Index" page-classes-enabled="true" page-class="btn"
                page-class-normal="btn-outline-light" page-class-selected="btn-primary">

            </div>
        </div>
    </div>
</div>



