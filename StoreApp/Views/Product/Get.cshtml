@model Product

<div class="row">
    <div class="col-md-12">
        <div class="text-center">
            <h6 class="display-6">
                @Model.ProductName
            </h6>
            <img class="img-fluid shadow rounded-3 p-5 my-3" src="@Model?.ImageUrl" alt="@Model?.ProductName">
            <p class="text">@Model?.Summary</p>
            <p class="lead text-danger">@Model.Price.ToString("c")</p>
        </div>
    </div>
</div>

<br>
<div class="text-center">
    <div class="btn-group">
        <a asp-controller="Product" asp-action="Index">
            <button class="btn btn-outline-primary"><i class="fa-solid fa-list"></i>
            &nbsp;Products</button>
        </a>
        <form id="@Model.ProductId" asp-page="/cart" method="post">
            <input type="hidden" asp-for="ProductId">
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()">
            <button type="submit" class="btn btn-outline-success">
                <i class="fa-solid fa-cart-plus"></i>
                Add To Cart
            </button>
        </form>

    </div>
</div>
