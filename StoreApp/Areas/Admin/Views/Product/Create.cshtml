@model ProductDtoForInsertion

<div class="text-center">
    <h2>Create</h2>
</div>

<form method="post" asp-action="Create" enctype="multipart/form-data">

    <div class="text-danger" asp-validation-summary="All"></div>


    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories">
        </select>
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input class="form-control" type="text" asp-for="ProductName">
    </div>
    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input class="form-control" type="text" asp-for="Summary">
    </div>
    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input class="form-control" type="text" asp-for="Price">
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input class="form-control" type="file" name="file">
    </div>

    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-success" type="submit">
                <i class="fa-regular fa-floppy-disk"></i>
                Save
            </button>
            <a class="btn btn-outline-info " asp-action="Index">
                <i class="fa-solid fa-backward"></i>
                Back
            </a>
        </div>
    </div>
</form>