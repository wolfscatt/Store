@model ProductDtoForUpdate

<div class="text-center">
    <h2>Update</h2>
</div>

<form method="post" asp-action="Update" enctype="multipart/form-data">

    <div class="text-danger" asp-validation-summary="All"></div>

    <input type="hidden" asp-for="ProductId">

    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories">
        </select>
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input class="form-control" type="text" asp-for="ProductName">
    </div>
    <div class="form-group my-3">
        <label asp-for="Summary"></label>
        <input class="form-control" type="text" asp-for="Summary">
    </div>
    <div class="form-group my-3">
        <label asp-for="Price"></label>
        <input class="form-control" type="text" asp-for="Price">
    </div>
    <div class="form-check form-switch">
        <input asp-for="ShowCase" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" asp-for="ShowCase">ShowCase</label>
    </div>

    <div class="form-group my-3">
        <img class="rounded shadow" width="200" src="@Model?.ImageUrl">
    </div>

    <div class="form-group my-3">
        <label asp-for="ImageUrl"></label>
        <input class="form-control" type="file" name="File">
    </div>

    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-success" type="submit">
                <i class="fa-regular fa-floppy-disk"></i>
                Update
            </button>
            <a class="btn btn-outline-info " asp-action="Index">
                <i class="fa-solid fa-backward"></i>
                Back
            </a>
        </div>
    </div>
</form>