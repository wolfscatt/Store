@model IEnumerable<Product>

<div class="text-center my-5">
    <div class="display-6">
        Products
    </div>
</div>
<hr>

<div class="d-flex justify-content-end my-3">
    <a class="btn btn-outline-success " asp-action="Create">
        <i class="fa-solid fa-plus"></i>
        Create
    </a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>ImageUrl</th>
            <th>Product Name</th>
            <th>Showcase</th>
            <th>Price</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var prd in Model)
        {
            <tr>
                <td>@prd.ProductId</td>
                <td>
                    <img class="border border-primary rounded" src="@prd?.ImageUrl" alt="@prd?.ProductName" height="50">
                </td>
                <td>@prd?.ProductName</td>
                <td>
                    <div class="form-check form-switch">
                        <input type="checkbox" class="form-check-input" checked="@prd.ShowCase" disabled>
                    </div>
                </td>
                <td>@prd.Price.ToString("c")</td>
                <td>
                    <div class="btn-group">
                        <a data-bs-toggle="tooltip" data-bs-title="Delete" class="btn btn-danger"
                            asp-action="Delete" asp-route-id="@prd.ProductId">
                            <i class="fa-solid fa-trash"></i>
                            Delete
                        </a>
                        <a class="btn btn-outline-warning " asp-route-id="@prd.ProductId" asp-action="Update">
                            <i class="fa-solid fa-pen-to-square"></i>
                            Update
                        </a>
                        <a class="btn btn-info " target="_blank" asp-route-id="@prd.ProductId" asp-area=""
                            asp-controller="Product" asp-action="Get">
                            <i class="fa-solid fa-magnifying-glass"></i>
                            Get
                        </a>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(() => {
            $('[data-bs-toggle="tooltip"]').tooltip()
        });
    </script>
}